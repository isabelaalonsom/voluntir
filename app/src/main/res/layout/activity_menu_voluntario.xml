<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.voluntir.voluntario.MenuVoluntarioActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewBemVindoVoluntario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:text="Bem vindo(a), "
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txtViewNomeVoluntario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:text="Voluntario!"
                    android:textSize="24sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btnVagasMenuOng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_botao_arredondado"
                android:onClick="clicarVagasVoluntario"
                android:text="VAGAS" />

            <Button
                android:id="@+id/btnMinhaContaMenuOng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_botao_arredondado"
                android:onClick="clicarMinhaContaVoluntario"
                android:text="MINHA CONTA" />

            <Button
                android:id="@+id/btnCandidaturas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_botao_arredondado"
                android:onClick="clicarBotaoCandidaturas"
                android:text="Candidaturas" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>