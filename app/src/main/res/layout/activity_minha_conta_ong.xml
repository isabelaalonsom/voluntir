<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.voluntir.ong.MinhaContaONGActivity">

    <TextView
        android:id="@+id/txtViewMinhaConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Minha Conta"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout
        android:id="@+id/LinearNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewONG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Nome: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtViewONGVariavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ONG X"
            android:textColor="#AA0B0B"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearCnpj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewCnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="CNPJ: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtViewCpnjVariavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="69.716.797/0001-24"
            android:textColor="#AA0B0B"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewLocalizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Localização: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtViewLocalizaoVariavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rua Bell Aliance, São Caetano do Sul"
            android:textColor="#AA0B0B"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearCausas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewCausas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Causas: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtViewCausasVariavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Desenvolvimento pessoal"
            android:textColor="#AA0B0B"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Telefone: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtViewTelefoneVariavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(11)99744-1254"
            android:textColor="#AA0B0B"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Site: "
            android:textSize="24sp" />

        <!-- esse campo não pode ser obrigatorio pq nem todas as ongs tem site -->
        <TextView
            android:id="@+id/txtViewSiteVariavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ongx.com.br"
            android:textColor="#AA0B0B"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="E-mail: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtViewEmailVariavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ongx@gmail.com"
            android:textColor="#AA0B0B"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearResumoOng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewResumoOng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Resumo da ONG:"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtViewResumoOngVariavel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="A ONG X tem sua localização em São Caetano do Sul, há 5 anos trabalhando no desenvolvimento de pessoas para recolocação no mercado de trabalho"
        android:textColor="#AA0B0B"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/LinearBotoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <!-- Esse botão volta para a activity CadastroONGActivity com os editText preenchidos para alteração posterior -->
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:onClick="clicarBotaoEditarOng"
            android:layout_marginRight="110dp"
            android:layout_marginLeft="110dp"
            android:text="Editar" />


    </LinearLayout>

    <!-- btnSair - Deve ser substituido por um botão com o ícone de portinha, veja o figma de telas (tela 12) -->
    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="100dp"
        android:text="Sair" />


</LinearLayout>