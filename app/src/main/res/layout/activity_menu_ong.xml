<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.voluntir.voluntir.MenuOngActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewBemVindo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:text="Bem vindo(a), "
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txtViewNomeOng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:text="ONG Ajuda certa!"
                    android:textSize="24sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btnMinhasVagas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_botao_arredondado"
                android:gravity="center"
                android:onClick="clicarMinhasVagas"
                android:text="Minhas Vagas" />

            <Button
                android:id="@+id/btnMinhaContaMenuOng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_botao_arredondado"
                android:onClick="clicarMinhaConta"
                android:text="MINHA CONTA" />

            <Button
                android:id="@+id/btnCriarVaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_botao_arredondado"
                android:onClick="clicarCriarVaga"
                android:text="CRIAR VAGA" />

            <Button
                android:id="@+id/btnEditarVagaMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_botao_arredondado"
                android:onClick="clicarEditarVagas"
                android:text="EDITAR VAGA" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>