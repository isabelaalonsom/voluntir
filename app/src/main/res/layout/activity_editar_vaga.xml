<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarVaga">
    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView3Vaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewTituloNovaVagaEditarVaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Editar vaga"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/LinearNomeONGEditarVaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewONGEditarVaga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="center"
                    android:text="Nome: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtViewNomeDaONGEditarVaga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="center"
                    android:text="ONG Ajuda Certa!"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LinearAreaConhecimentoEditarVaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewAreaConhecimentoEditarVaga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Título da vaga:"
                    android:textSize="18sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edtTextAreaConhecimentoEditarVaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escreva o título da vaga" />

            <LinearLayout
                android:id="@+id/LinearDataInicioEditarVaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewDataInicioEditarVaga"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="number"
                    android:text="Data de início: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtTextDataInicioEditarVaga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="__/__/____"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearDataTerminoEditarVaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewDataTerminoEditarVaga"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="start"
                    android:text="Data de término: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtTextDataTerminoEditarVaga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="__/__/____"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearHorarioEditarVaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewCargaHorariaEditarVaga"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="start"
                    android:text="Carga Horária:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtTextCargaHorariaEditarVaga"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/txtHoras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="horas"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextTextPersonNameEditarVaga"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start"
                    android:inputType="textPersonName"
                    android:text="Quantidade de candidatos:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtTextQtdCandidatosEditarVaga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearPeriodicidadeEditarVaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewPeriodicidadeEditarVaga"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="start"
                    android:text="Periodicidade: "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edtTextPeriodicidadeEditarVaga"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="X"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/txtViewVezesPorSemanaEditarVaga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="center"
                    android:text="vezes por semana"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearDetalhesVagaEditarVaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewDetalhesVagaEditarVaga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:gravity="start"
                    android:text="Detalhes Sobre a Vaga: "
                    android:textSize="18sp" />


            </LinearLayout>

            <EditText
                android:id="@+id/edtTextDetalhesVagaEditarVaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escreva os detalhes sobre a vaga" />

            <LinearLayout
                android:id="@+id/LinearBotoesEditarVaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnExcluirVaga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="excluirVaga"
                    android:text="EXCLUIR" />

                <Button
                    android:id="@+id/btnConfirmarVagaEditarVaga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmar" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>