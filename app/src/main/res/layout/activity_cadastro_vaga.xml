<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.voluntir.ong.CadastroVagaActivity">

    <TextView
        android:id="@+id/txtViewTituloNovaVaga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cadastrar nova vaga"
        android:layout_marginBottom="20dp"
        android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/LinearNomeONG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViewONG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nome: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtViewNomeDaONG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nome da Ong"
                android:textSize="18sp" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearAreaConhecimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewAreaConhecimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Área de conhecimento: "
            android:textSize="18sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtTextAreaConhecimento"
        android:layout_width="match_parent"
        android:hint="Escreva a área de conhecimento"
        android:layout_height="84dp" />

    <LinearLayout
        android:id="@+id/LinearDataInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewDataInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Data de início: "
            android:inputType="number"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtTextDataInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="__/__/____"
            android:ems="10" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearDataTermino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewDataTermino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Data de término: "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtTextDataTermino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="__/__/____" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Horário: "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtTextHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="10:00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearPeriodicidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewPeriodicidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Periodicidade: "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtTextPeriodicidade"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="X" />

        <TextView
            android:id="@+id/txtViewVezesPorSemana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="vezes por semana"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearDetalhesVaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewDetalhesVaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Detalhes Sobre a Vaga: "
            android:textSize="18sp" />


    </LinearLayout>

    <EditText
        android:id="@+id/edtTextDetalhesVaga"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:ems="10"
        android:hint="Escreva os detalhes sobre a vaga" />

    <LinearLayout
        android:id="@+id/LinearBotoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLimpar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:onClick="limparDadosDoCadastroVaga"
            android:text="Limpar" />

        <Button
            android:id="@+id/btnConfirmarVaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:onClick="clicarBotaoConfirmar"
            android:text="Confirmar" />

    </LinearLayout>

</LinearLayout>